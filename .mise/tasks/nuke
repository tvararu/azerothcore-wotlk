#!/usr/bin/env bash
#MISE description="Destroy containers and database volume (full reset)"
set -euo pipefail

echo "This will destroy all containers and the database volume."
echo "You will lose all character data, accounts, and settings."
read -rp "Are you sure? [y/N] " confirm
if [[ "$confirm" != [yY] ]]; then
  echo "Aborted."
  exit 0
fi

docker compose down -v
echo "Nuked. Run 'mise start' then 'mise seed' to set up fresh."
